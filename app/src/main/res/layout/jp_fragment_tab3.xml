<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.mak_here.holydayz.JeevanPramaan.SlidingTabs"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView"
            android:textStyle="normal"
            android:textColor="#424242"
            android:text="@string/jp_tab3.0"
            android:textSize="17dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:textStyle="bold"
            android:textSize="12dp"
            android:typeface="serif"
            android:textAllCaps="false"
            android:hapticFeedbackEnabled="true"
            android:background="#BBDEFB"
            android:clickable="true"
            android:text="https://jeevanpramaan.gov.in/"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jp_tab3.00"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:background="#4464AD"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView3"
            android:textStyle="normal"
            android:textColor="#424242"
            android:text="@string/jp_tab3.1"
            android:textSize="17dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:textStyle="bold"
            android:textSize="12dp"
            android:typeface="serif"
            android:textAllCaps="false"
            android:hapticFeedbackEnabled="true"
            android:background="#BBDEFB"
            android:clickable="true"
            android:text="https://en.wikipedia.org/wiki/Atal_Pension_Yojana"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atal Pension Yojana"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:background="#4464AD"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textStyle="normal"
            android:textColor="#424242"
            android:text="@string/jp_tab3"
            android:textSize="17dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:textStyle="bold"
            android:textSize="12dp"
            android:typeface="serif"
            android:textAllCaps="false"
            android:hapticFeedbackEnabled="true"
            android:background="#BBDEFB"
            android:clickable="true"
            android:text="https://goo.gl/vES95e"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@id/textView6"
            android:textColor="#424242"
            android:textSize="17dp"
            android:textStyle="normal"
            android:text="\n"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</ScrollView>